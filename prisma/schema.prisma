generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player {
  id        Int       @id @default(autoincrement())
  name      String?   @default("Anonymous")
  start     DateTime  @default(now())
  stop      DateTime? @updatedAt
  time      Int
  man       Boolean   @default(false)
  bull      Boolean   @default(false)
  duck      Boolean   @default(false)
  gnome     Boolean   @default(false)
  poe       Boolean   @default(false)
}

model Location {
  id        Int       @id @default(autoincrement())
  xCoord    Int
  yCoord    Int
}