generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player {
  id            Int             @id @default(autoincrement())
  name          String?         @default("Anonymous")
  start         DateTime        @default(now())
  stop          DateTime?
  time          Int?

  foundTargets  FoundTarget[]
}

model FoundTarget {
  id            Int             @id @default(autoincrement())
  sessionId     Int
  targetKey     String
  foundAt       DateTime        @default(now())

  session       Player          @relation(fields: [sessionId], references: [id])

  @@unique([sessionId, targetKey])
}

model Target {
  id        Int                 @id @default(autoincrement())
  key       String
  xCoord    Float
  yCoord    Float
  radius    Float
}